<p id="notice"><%= notice %></p>

<h1>Listing Matters</h1>

<table>
  <thead>
    <tr>
     <th>Type</th>
      <th>Party</th>
      <th>Address</th>
      <th>Date of Incident</th>
      <th>Matter Expires by</th>
      <th>Documents Received</th>
      <th>Cost</th>
      <th>Status</th>
      <th>Date Opened</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matters.each do |matter| %>
      <tr>
       <td><%= matter.type.matterType %></td>
        <td><%= matter.party %></td>
        <td><%= matter.address %></td>
        <td><%= matter.dateIncident %></td>
        <td><%= matter.dateExpiry %></td>
        <td><%= matter.docsReceived %></td>
        <td><%= matter.cost %></td>
        <td><%= matter.status.statusName %></td>
        <td> <%= matter.created_at %></td>
        <td><%= link_to 'Show', matter %></td>
        <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
        <td><%= link_to 'Destroy', matter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

